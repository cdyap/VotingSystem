<div class="container sign-in">

	<%= link_to image_tag('logo-02.png', :id => 'sign-up-logo' ) + "", root_path %>
	<h3>Welcome! Let's get started.</h3>

	<div class="row">
		<div class="col-md-6 col-md-offset-3 col-xs-8 col-xs-offset-2">
			<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
				<%= f.input :email, :class=>"form-group input-lg", :placeholder => "Email", :label => false, :input_html => { :class => 'input-lg'} %>
				<%= f.input :password, :class=>"form-group", :placeholder => "Password", :label => false, :input_html => { :class => 'input-lg'}  %>
				<%= f.input :first_name, :class=>"form-group", :placeholder => "First Name", :label => false, :input_html => { :class => 'input-lg'} %>
				<%= f.input :last_name, :class=>"form-group", :placeholder => "Last Name", :label => false, :input_html => { :class => 'input-lg'}  %>

				<%= f.input :birthday, as: :date, :label => false, :input_html => { :class => 'input-lg form-inline', :id => 'datepix'} %>
				<%= f.input :gender, :class=>"form-group", :placeholder => "Gender", :label => false, :input_html => { :class => 'input-lg'}  %>
				<%= f.submit "Begin voting!", :class => "btn btn-lg startchange", :id => "login-btn", :role => "button" %>
			<% end %>
		</div>
	</div>
</div>